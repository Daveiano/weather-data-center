{
  "name": "weather-data-center-electron-forge",
  "productName": "weather-data-center",
  "version": "1.0.0-alpha1",
  "description": "App built with Electron + React + TypeScript to collect, organize and analyse weather data.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start & yarn test:unit:watch",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "test:u": "jest --updateSnapshot",
    "coverage": "jest --collectCoverage --coverageProvider=v8",
    "test:e2e": "electron-forge package && rm -rf ./out/ && jest --ci --detectOpenHandles --selectProjects \"End-to-end tests\"",
    "test:e2e:ci": "electron-forge package && rm -rf ./out/ && xvfb-run jest --ci --detectOpenHandles --selectProjects \"End-to-end tests\"",
    "test:unit": "jest --selectProjects \"Unit & integration tests\"",
    "test:unit:watch": "jest --selectProjects \"Unit & integration tests\" --watch --verbose",
    "test:unit:ci": "jest --ci --selectProjects \"Unit & integration tests\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "jest": {
    "projects": [
      "./jest.config.unit.js",
      "./jest.config.e2e.js"
    ]
  },
  "keywords": [],
  "author": {
    "name": "dba",
    "email": "david.baetge@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "weather_data_center_electron_forge"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/async": "^3.2.10",
    "@types/carbon-components-react": "^7.29.0",
    "@types/carbon__icons-react": "^10.24.0",
    "@types/jest": "^27.0.3",
    "@types/jest-image-snapshot": "^4.3.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^27.4.2",
    "css-loader": "^5.1.2",
    "electron": "12.0.0",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-react": "^7.22.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "jest": "^27.3.1",
    "jest-image-snapshot": "4.5.1",
    "jest-playwright-preset": "^1.7.0",
    "node-loader": "^1.0.1",
    "node-sass": "^5.0.0",
    "playwright": "^1.16.3",
    "postcss": "^8.2.8",
    "postcss-loader": "4",
    "sass-loader": "10",
    "style-loader": "^2.0.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@carbon/charts": "^0.53.0",
    "@carbon/charts-react": "^0.53.0",
    "@carbon/icons-react": "10.22.0",
    "@carbon/themes": "^10.40.0",
    "@types/nedb": "ramiroaisen/nedb-types",
    "async": "^3.2.2",
    "carbon-components": "10.25.0",
    "carbon-components-react": "7.25.0",
    "carbon-icons": "7.0.7",
    "csv-parser": "^3.0.0",
    "d3": "^7.1.1",
    "date-fns": "^2.19.0",
    "dotenv": "^10.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "moment": "^2.29.1",
    "nedb": "^1.8.0",
    "query-string": "^7.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-spinners": "^0.10.6",
    "redux": "^4.0.5"
  }
}
